<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_felipe"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginBottom="76dp"
        android:layout_marginEnd="91dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="91dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="145dp"
        android:text="Felipe"
        app:layout_constraintBottom_toTopOf="@+id/btn_rafael"
        app:layout_constraintEnd_toStartOf="@+id/btn_ana"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btn_ana"
        android:onClick="clickAna"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginBottom="84dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="145dp"
        android:text="Ana"
        app:layout_constraintBottom_toTopOf="@+id/btn_rafael"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_rafael"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginEnd="156dp"
        android:layout_marginLeft="155dp"
        android:layout_marginRight="156dp"
        android:layout_marginStart="155dp"
        android:layout_marginTop="76dp"
        android:text="Rafael"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_felipe" />
</android.support.constraint.ConstraintLayout>